---
const { name, bio } = Astro.props;
---
  <li
    class="flex flex-col items-center justify-center order-first lg:col-span-2 lg:p-12 bg-linear-180 outline outline-neutral bg-accent rounded-xl lg:order-none"
  >
    <div class="text-center lg:text-balance">
      <h2
        class="text-2xl md:text-3xl lg:text-4xl font-semibold tracking-tight text-accent-base"
      >
        {name}
      </h2>
      <p class="mt-4 font-medium text-accent-base text-balance">
        {bio}
      </p>
    </div>
  </li>
